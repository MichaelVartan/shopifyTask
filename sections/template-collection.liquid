<div class="px-4 py-8">
  <h1 class="3-xl text-center">{{ collection.title }}</h1>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-col-1 md:grid-col-3 gap-4">
      {% for product in collection.products %}
        <div class="w-full py-6 px-3">
          <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
              <div class="h-80 overflow-hidden">
                <img class="w-full h-full object-cover" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">

              </div>

              {% endif %}
            </a>


            <span class="text-sm ">{{ product.vendor }}</span>

            <a href="{{ product.url }}">{{ product.title }}</a>

            <p>{{ product.price | money }}</p>
          </div>
        </div>

      {% else %}
        <p>There are no products inside this collection</p>
      {% endfor %}
    </div>
  </div>
  {% paginate collection.products by 4 %}

    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>